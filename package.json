{
  "name": "colinsalmcorner-buildtasks",
  "version": "0.1.1",
  "description": "Custom build tasks for TFS or VSO",
  "scripts": {
    "install-libs": "glob-exec --foreach \"Tasks/!(DacPacReport)*/package.json\" -- \"cd {{file.dir}} && yarn install\"",
    "install-dacpac-libs": "echo 'REQUIRES NODE <= 8.x' && cd Tasks/DacPacReport && yarn install",
    "upgrade-libs": "glob-exec --foreach \"Tasks/!(DacPacReport)*/package.json\" -- \"cd {{file.dir}} && yarn upgrade --latest\"",
    "build": "tsc",
    "build-prod": "yarn install-libs && tsc",
    "test": "yarn build && cross-env NODE_ENV=test NODE_NO_WARNINGS=1 vitest run --bail=1 test/_testsuite.js",
    "test:quick": "cross-env NODE_ENV=test NODE_NO_WARNINGS=1 vitest run --bail=1 test/_testsuite.js",
    "debugtest": "yarn build && cross-env NODE_ENV=debugtest NODE_NO_WARNINGS=1 vitest run --bail=1 test/_testsuite.js",
    "cover": "yarn build && cross-env NODE_ENV=test NODE_NO_WARNINGS=1 nyc vitest run --bail=1 --reporter=junit --outputFile=test-results.xml test/_testsuite.js",
    "install-vswhere": "curl https://github.com/Microsoft/vswhere/releases/download/1.0.62/vswhere.exe -Lo Tasks/DacPacReport/vswhere.exe",
    "prepextension": "yarn install-vswhere && yarn install-libs && yarn cover"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/colindembovsky/cols-agent-tasks"
  },
  "keywords": [
    "build",
    "tasks",
    "tokens",
    "replace",
    "dacpac",
    "traffic"
  ],
  "author": "Colin Dembovsky (ColinsALMCorner.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/colindembovsky/cols-agent-tasks/issues"
  },
  "homepage": "https://github.com/colindembovsky/cols-agent-tasks",
  "devDependencies": {
    "@types/gulp-mocha": "^0.0.37",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.3.2",
    "@types/q": "^1.5.8",
    "@types/shelljs": "^0.10.0",
    "assert": "^2.1.0",
    "cross-env": "^7.0.3",
    "glob-exec": "^0.1.1",
    "minimatch": "^10.2.4",
    "nyc": "^17.0.0",
    "path": "^0.12.7",
    "shelljs": "^0.10.0",
    "source-map-support": "^0.5.21",
    "sync-request": "^6.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "main": "index.js",
  "dependencies": {
    "azure-devops-node-api": "^15.1.2",
    "azure-pipelines-task-lib": "^5.2.6",
    "process": "^0.11.10",
    "q": "^1.5.1"
  },
  "resolutions": {
    "@babel/traverse": "^7.23.2",
    "braces": "^3.0.3",
    "form-data": "^2.5.4",
    "esbuild": "^0.25.0",
    "js-yaml": "^4.1.1",
    "json5": "^2.2.2",
    "minimatch": "^3.1.4",
    "minimist": "^1.2.8",
    "nanoid": "^3.1.31",
    "qs": "^6.14.2",
    "serialize-javascript": "^6.0.2"
  },
  "overrides": {
    "azure-pipelines-task-lib": {
      "minimatch": "3.1.4"
    }
  },
  "nyc": {
    "include": [
      "Tasks/**/*.js"
    ],
    "exclude": [
      "**/fileencoding.js",
      "test/**",
      "**/*.d.ts",
      "**/*.map"
    ],
    "reporter": [
      "text",
      "cobertura",
      "html"
    ],
    "all": true,
    "sourceMap": true,
    "instrument": true,
    "cache": true,
    "exclude-after-remap": false
  }
}
